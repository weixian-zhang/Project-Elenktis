    //https://www.google.com/search?rlz=1C1CHBF_enSG830SG830&ei=cLEHXfLSE4KRwgPixoKoCg&q=visual+studio+code+docker+vsdbg+--interpreter%3Dvscode&oq=visual+studio+code+docker+vsdbg+--interpreter%3Dvscode&gs_l=psy-ab.3...5335.6487..6816...0.0..0.54.299.7......0....1..gws-wiz.......0i71.Ogf72mf9w2M
    "version": "0.2.0",
    "languageMappings": {
        "C#": {
          "languageId": "3F5162F8-07C6-11D3-9053-00C04FA302A1",
          "extensions": [ "*" ]
        }
      },
      "exceptionCategoryMappings": {
        "CLR": "449EC4CC-30D2-4032-9256-EE18EB41B62B",
        "MDA": "6ECE07A9-0EDE-45C4-8296-818D8FC401D4"
      },
    "configurations": [
        {
            "name": "SvcInformer-Local",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}",

        },
        {
            "name": "SvcInformer-Docker",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickRemoteProcess}",
            "pipeTransport": {
                "pipeCwd": "${workspaceFolder}",
                "pipeProgram": "docker",
                "pipeArgs": [ "exec -i msi"],
                "debuggerPath": "/root/vsdbg/vsdbg",
                "quoteArgs": false,
            },
            "sourceFileMap": {
                "/src/Informer/MandateServiceInformer": "${workspaceRoot}"
            },
            "justMyCode": true,
            "logging": {
                "engineLogging": true
            }
        },
        {
            "name": "SvcInformer-K8s",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickRemoteProcess}",
            "justMyCode": false,
            "pipeTransport": {
                "pipeProgram": "kubectl",
                "pipeArgs": [
                    "exec",
                    "-i",
                    "msi",
                    "--"
                ],
                "quoteArgs": false,
                "debuggerPath": "/root/vsdbg/vsdbg"
            },
            "sourceFileMap": {
                "/path/to/original/source/files": "${workspaceRoot}"
            }
        }

    ]
}