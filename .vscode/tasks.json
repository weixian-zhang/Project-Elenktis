{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "docker build DefaultSvcSpy",
            "command": "docker build -f Dockerfile.debug ../../ -t acrcentralsvcdev.azurecr.io/defaultsvcspy:defaultsvcspy-v0.30",
            "type": "shell",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/Spy/DefaultServiceSpy"
            },
            "problemMatcher": []
        },
        {
            "label": "kubectl DeleteDeployment DefaultSvcSpy",
            "command": "kubectl delete deployment deploy-spy-defaultsvc",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/Deployment"
            },
            "problemMatcher": []
        },
        {
            "label": "kubectl Deploy DefaultSvcSpy",
            "command": "kubectl apply --validate=false -f defaultsvcspy-deployment.yaml",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/Deployment"
            },
            "problemMatcher": []
        },
        {
            "label": "dotnet build DefaultSvcSpy",
            "type": "shell",
            "command": "dotnet build",
            "options": {
                "cwd": "${workspaceFolder}/Controllers/Spy/DefaultServiceSpy"
            },
            "problemMatcher": []
        },
        {
            "label": "dotnet build Recce",
            "type": "shell",
            "command": "dotnet build",
            "options": {
                "cwd": "${workspaceFolder}/Controllers/Recce"
            },
            "problemMatcher": []
        },
        {
            "label": "dotnet build Assessment",
            "type": "shell",
            "command": "dotnet build",
            "options": {
                "cwd": "${workspaceFolder}/Common/Elenktis.Assessment"
            },
            "problemMatcher": []
        },
        {
            "label": "dotnet build Configuration",
            "type": "shell",
            "command": "dotnet build",
            "options": {
                "cwd": "${workspaceFolder}/Common/Elenktis.Configuration"
            },
            "problemMatcher": []
        },
        {
            "label": "func start recce",
            "type": "shell",
            "dependsOn": "build",
            "options": {
                "cwd": "${workspaceFolder}/Controllers\\Recce/bin/Debug/netcoreapp2.2",
                "env": {
                    "env": "dev"
                }
            },
            "command": "func start",
            "problemMatcher": "$func-watch"
        }
    ]
}