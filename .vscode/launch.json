{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "languageMappings": {
        "C#": {
          "languageId": "3F5162F8-07C6-11D3-9053-00C04FA302A1",
          "extensions": [ "*" ]
        }
      },
      "exceptionCategoryMappings": {
        "CLR": "449EC4CC-30D2-4032-9256-EE18EB41B62B",
        "MDA": "6ECE07A9-0EDE-45C4-8296-818D8FC401D4"
      },
    "configurations": [
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}",

        },
        {
            "name": ".NET Core Docker Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickRemoteProcess}",
            "pipeTransport": {
                "pipeProgram": "powershell",
                "pipeArgs": [ "docker exec -i dss"],
                "debuggerPath": "/home/vsdbg/vsdbg",
                "pipeCwd": "${workspaceFolder}",
                "quoteArgs": false,
            },
            "sourceFileMap": {
                "/src/dotnet-function-app": "${workspaceFolder}\\Spy\\DefaultServiceSpy"
            },
            "justMyCode": false,
            "requireExactSource": false,
            "logging": {
                "engineLogging": true,
                "exceptions": true
            }
        },
        //https://github.com/OmniSharp/omnisharp-vscode/issues/2488
        {
            "name": "Kube Debugger",
            "type": "coreclr",
            "request": "attach",
            "processId": 1,
            "pipeTransport": {
                "debuggerPath": "/home/vsdbg/vsdbg",
                "pipeCwd": "${workspaceFolder}",
                "windows": {
                    "pipeProgram": "kubectl",
                    "pipeArgs": [
                        "exec",
                        "-i",
                        "deploy-spy-defaultsvc-687d7c7565-nz75j",
                        "--"
                    ],
                    "quoteArgs": false
                }
            },
            "sourceFileMap": {
                "/src/dotnet-function-app": "${workspaceFolder}/Spy/DefaultServiceSpy"
            },
            "justMyCode": false,
            "requireExactSource": false,
            "logging": {
                "engineLogging": true,
                "exceptions": true
            }
        }
    ]
}